<article>
  <header>
    <div class="article-meta">
      {{t 'Updated at'}} <time datetime="{{record.createdAt}}"><strong>{{we-date record.updatedAt}}</strong></time> -
      {{#each record.categories}} {{t 'category'}}: <strong>{{this}}</strong>{{/each}}
    </div>

  </header>

  {{#each record.featuredImage}}{{{we-image this 'medium' class="article-featured-image thumbnail"}}}{{/each}}
  {{{record.text}}}

  <footer>
    <div class="row"><div class="col col-md-12">{{{we-terms record.tags}}}</div></div>
    <div class="row actions"><div class="col col-md-12">
      {{#link-to 'cfnews.edit' record.conferenceId record.id class="btn btn-default"}}
       <i class="glyphicon glyphicon-edit text-primary"></i> {{t 'Edit'}}
      {{/link-to}}
      {{#link-to 'cfnews.delete' record.conferenceId record.id class="btn btn-default"}}
       <i class="glyphicon glyphicon-remove text-danger"></i> {{t 'Delete'}}
      {{/link-to}}
    </div></div>
  </footer>

</article>