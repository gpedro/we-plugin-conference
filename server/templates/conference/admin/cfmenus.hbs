<div class="row">
  <div class="col-lg-12">
    <a class="btn btn-default" href="/conference/{{conference.id}}/admin/menu/create">{{t 'Create'}}</a>
  </div>
  <div class="col-lg-12">
    <table id="cfmenuTable" class="table table-striped table-hover">
      <thead>
        <tr>
          <th we-model-attr="id">id</th>
          <th we-model-attr="name">{{t 'name'}}</th>
          <th we-model-attr="actions">{{t 'actions'}}</th>
        </tr>
      </thead>
      <tbody>
      {{#each cfmenu}}
        <tr class="draggable">
          <td>{{id}}</td>
          <td>{{name}}</td>
          <td>
            <a href="/conference/{{conferenceId}}/admin/menu/{{id}}" class="btn btn-primary btn-sm">{{t 'Edit'}}</a>
            <a href="/conference/{{conferenceId}}/admin/menu/{{id}}/delete" class="btn btn-default btn-sm">{{t 'Delete'}}</a>
          </td>
        </tr>
      {{else}}
        <tr><td colspan="3" class="text-center">{{t 'conference.menu.empty'}}</td></tr>
      {{/each}}
      </tbody>
    </table>
  </div>
</div>
