<div class="row">
  <div class="col-lg-12 actions">{{we-action-create-btn model req conference.id}}</div>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover sorted_table" id="cfpagetable"  we-dataTable-url="/conference/{{conference.id}}/cfnews" we-search-field="title">
          <thead>
            <tr>
              <th we-model-attr="id">id</th>
              <th we-model-attr="title">title</th>
              <th we-model-attr="teaser">teaser</th>
              <th we-model-attr="weModelActions">actions</th>
            </tr>
          </thead>
          <tbody>
          {{#each record}}
            <tr>
              <td>{{id}}</td>
              <td>{{title}}</td>
              <td>{{teaser}}</td>
              <td></td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    we.components.dataTable('#cfpagetable', {
      where: { conferenceId: {{conference.id}} },
      actionRender: function actionRender(table, data, d,record) {
        var  tags = '<a href="/conference/{{conference.id}}/cfnews/'+record.id+'" text="{{t "Edit"}}" class="btn btn-default btn-sm"><i class="glyphicon glyphicon-eye-open"></i></a>';

        tags += '<a href="/conference/{{conference.id}}/cfnews/'+record.id+'/edit" text="{{t "Edit"}}" class="btn btn-primary btn-sm"><i class="glyphicon glyphicon-pencil"></i></a>';
        return tags;
      }
    });
  });
</script>